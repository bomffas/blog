---
interface IGalleryImage {
  source: any;
  rounded: "full" | "default";
}

const { source, rounded = "default" } = Astro.props as IGalleryImage;

import Image from "astro/components/Image.astro";
import "./UserPhoto.css";
---

<picture class="user-photo">
  <Image
    class={`user-photo__image ${rounded === "full" ? "user-photo__image--rounded-full" : ""}`}
    alt=""
    src={source}
  />
</picture>
